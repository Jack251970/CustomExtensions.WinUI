<Page
    x:Class="SampleExtension.UI.SamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleExtension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<TextBlock FontSize="48"><Run Text="Hello, " /><Run Text="{Binding SelectedItem,ElementName=Entity,Mode=OneWay}" /><Run Text="!" /></TextBlock>
		<ComboBox x:Name="Entity" ItemsSource="{ui:EnumValues Type=local:Entity}" />
	</StackPanel>
</Page>
